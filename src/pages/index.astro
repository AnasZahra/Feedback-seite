---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Hauptseite">
  <main>
    <h1>Willkommen zu unserem Feedback-System</h1>
    <div class="button-container">
      <a href="/feedback" class="button">Feedback Abgeben</a>
      <a href="/problem-melden" class="button">Problem Melden</a>
      <a href="/verbesserungsvorschlaege" class="button">Verbesserungsvorschl√§ge</a>
      <a href="/bewertungen" class="button">Bewertungen</a>
      <a href="/antworten" class="button">Antworten</a>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 2rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 22px;
    line-height: 1.6;
    text-align: center;
  }

  h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 2rem;
  }

  .button-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .button {
    display: inline-block;
    padding: 1rem;
    background: var(--accent-gradient);
    color: white;
    text-decoration: none;
    border-radius: 10px;
    font-size: 1.2rem;
    transition: background 0.3s ease, transform 0.3s ease;
  }

  .button:hover {
    background: var(--accent-dark);
    transform: translateY(-2px);
  }
</style>
