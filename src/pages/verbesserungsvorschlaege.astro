---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Verbesserungsvorschläge" description="Geben Sie hier Ihre Verbesserungsvorschläge für die Vorlesungen an der Hochschule ab.">
  <main>
    <h1>Verbesserungsvorschläge für Vorlesungen</h1>
    <form id="suggestion-form">
      <!-- Auswahlfeld für die Kategorie -->
      <label for="suggestion-category">Kategorie:</label>
      <select id="suggestion-category" required>
        <option value="" disabled selected>Bitte wählen Sie eine Kategorie</option>
        <option value="Vorlesung">Vorlesung</option>
        <option value="Seminar">Seminar</option>
        <option value="Übung">Übung</option>
        <option value="Sonstiges">Sonstiges</option>
      </select>
      <label for="suggestion-subcategory" id="suggestion-subcategory-label" style="display: none;">Unterkategorie:</label>
      <select id="suggestion-subcategory" style="display: none;" required>
        <!-- Optionen für Sub-Kategorien werden hier dynamisch hinzugefügt -->
      </select>
      <label for="suggestion-message">Ihr Vorschlag:</label>
      <textarea id="suggestion-message" rows="5" placeholder="Ihr Verbesserungsvorschlag" required></textarea>
      <label for="suggestion-identity">
        <input type="checkbox" id="suggestion-identity" />
        Als Benutzer identifizieren
      </label>
      <button type="submit">Vorschlag senden</button>
    </form>
    <!-- Der "Zurück zur Seite" Button als Pfeil -->
    <button id="back-button">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
        <path d="M14 7l-5 5 5 5V7z"/>
      </svg>
      Zurück
    </button>
  </main>
</Layout>

<script type="module">
  document.addEventListener('DOMContentLoaded', () => {
    const suggestionForm = document.getElementById('suggestion-form');
    const suggestionCategorySelect = document.getElementById('suggestion-category');
    const suggestionSubcategorySelect = document.getElementById('suggestion-subcategory');
    const suggestionSubcategoryLabel = document.getElementById('suggestion-subcategory-label');
    const suggestionMessageInput = document.getElementById('suggestion-message');
    const suggestionIdentityCheckbox = document.getElementById('suggestion-identity');
    const backButton = document.getElementById('back-button');

    suggestionCategorySelect.addEventListener('change', () => {
      const selectedCategory = suggestionCategorySelect.value;

      if (selectedCategory === 'Vorlesung') {
        suggestionSubcategoryLabel.style.display = 'block';
        suggestionSubcategorySelect.style.display = 'block';
        suggestionSubcategorySelect.innerHTML = `
          <option value="" disabled selected>Bitte wählen Sie ein Thema</option>
          <option value="Vorlesungsthemen">Vorlesungsthemen</option>
          <option value="Dozenten">Dozenten</option>
          <option value="Vorlesungsunterlagen">Vorlesungsunterlagen</option>
          <option value="Prüfungen">Prüfungen</option>
        `;
      } else if (selectedCategory === 'Seminar') {
        suggestionSubcategoryLabel.style.display = 'block';
        suggestionSubcategorySelect.style.display = 'block';
        suggestionSubcategorySelect.innerHTML = `
          <option value="" disabled selected>Bitte wählen Sie ein Thema</option>
          <option value="Seminarinhalte">Seminarinhalte</option>
          <option value="Dozenten">Dozenten</option>
          <option value="Seminarunterlagen">Seminarunterlagen</option>
          <option value="Seminarorganisation">Seminarorganisation</option>
        `;
      } else if (selectedCategory === 'Übung') {
        suggestionSubcategoryLabel.style.display = 'block';
        suggestionSubcategorySelect.style.display = 'block';
        suggestionSubcategorySelect.innerHTML = `
          <option value="" disabled selected>Bitte wählen Sie ein Thema</option>
          <option value="Übungsaufgaben">Übungsaufgaben</option>
          <option value="Übungsdurchführung">Übungsdurchführung</option>
          <option value="Übungsfeedback">Übungsfeedback</option>
          <option value="Übungsmaterialien">Übungsmaterialien</option>
        `;
      } else if (selectedCategory === 'Sonstiges') {
        suggestionSubcategoryLabel.style.display = 'none';
        suggestionSubcategorySelect.style.display = 'none';
        suggestionSubcategorySelect.innerHTML = '';
      }
    });

    suggestionForm.addEventListener('submit', (event) => {
      event.preventDefault();
      const category = suggestionCategorySelect.value;
      const subcategory = suggestionSubcategorySelect.value || '';
      const message = suggestionMessageInput.value;
      const isIdentified = suggestionIdentityCheckbox.checked;

      let username = isIdentified ? prompt('Bitte geben Sie Ihren Benutzernamen ein:') : 'Anonym';
      if (isIdentified && !username) {
        alert('Bitte geben Sie einen Benutzernamen ein.');
        return;
      }

      let title = category;
      if (category !== 'Sonstiges' && subcategory) {
        title += `: ${subcategory}`;
      }

      let suggestionMessages = JSON.parse(localStorage.getItem('messages') || '[]');
      suggestionMessages.push({
        id: Date.now(),
        type: 'Verbesserungsvorschlag',
        title,
        message,
        username,
        replies: []
      });
      localStorage.setItem('messages', JSON.stringify(suggestionMessages));
      suggestionMessageInput.value = '';
      suggestionCategorySelect.value = '';
      suggestionSubcategorySelect.innerHTML = '';
      suggestionSubcategoryLabel.style.display = 'none';
      suggestionSubcategorySelect.style.display = 'none';
      alert('Vorschlag gesendet!');
    });

    // Zurück-Button Logik
    backButton.addEventListener('click', () => {
      window.history.back();  // Gehe zur vorherigen Seite
    });
  });
</script>

<style>
  main {
    margin: auto;
    padding: 2rem;
    width: 100%;
    max-width: 600px;
    background: #e0d9d2;
    border-radius: 10px;
    color: #0f0e0e;
    text-align: center;
    position: relative;  /* Wichtig für die Positionierung des "Zurück"-Buttons */
  }

  h1 {
    margin-bottom: 3rem;
    font-size: 28px;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  select,
  textarea {
    padding: 0.5rem;
    border-radius: 8px;
    border: 1px solid #0a0202;
    background: #e9e2e2;
    color: #110505;
  }

  button {
    padding: 0.75rem;
    background: linear-gradient(to right, rgb(46 111 24), rgb(168 255 234 / 0%));
    color: white;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.3s ease;
  }

  button:hover {
    background: #c05;
    transform: translateY(-2px);
  }

  /* Stil für den "Zurück" Button mit Pfeil */
  #back-button {
    position: absolute;  /* Positionierung innerhalb von "main" */
    bottom: -0.7rem;        /* Abstand vom unteren Rand */
    right: 0;       /* Abstand vom rechten Rand */
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(to right, rgb(231 238 231), rgb(13 6 6));
    color: hsl(0deg 7% 3%);
    border: none;
    border-radius: 8px;
    box-shadow: 0 2px 4px rgb(0 0 0 / 10%);
    cursor: pointer;
    transition: background 0.3s ease, transform 0.3s ease;
  }

  #back-button:hover {
    background: rgb(145 190 130);
    transform: translateY(-2px);
  }

  /* Stil für das Pfeil-SVG */
  #back-button svg {
    fill: currentcolor;  /* Erbt die Textfarbe des Buttons */
  }
</style>
