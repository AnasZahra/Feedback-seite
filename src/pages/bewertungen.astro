---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Bewertungen">
  <main>
    <h1>Bewertungen</h1>
    <form id="review-form">
      <label for="review-message">Ihre Bewertung:</label>
      <textarea id="review-message" rows="5" placeholder="Ihre Bewertung" required></textarea>
      <label for="review-identity">
        <input type="checkbox" id="review-identity" />
        Als Benutzer identifizieren
      </label>
      <button type="submit">Bewertung abgeben</button>
    </form>
    <!-- Der "Zurück zur Seite" Button als Pfeil -->
    <button id="back-button">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
        <path d="M14 7l-5 5 5 5V7z"/>
      </svg>
      Zurück
    </button>
  </main>
</Layout>

<script type="module">
  document.addEventListener('DOMContentLoaded', () => {
    const reviewForm = document.getElementById('review-form');
    const reviewMessageInput = document.getElementById('review-message');
    const reviewIdentityCheckbox = document.getElementById('review-identity');

    reviewForm.addEventListener('submit', (event) => {
      event.preventDefault();
      const message = reviewMessageInput.value;
      const isIdentified = reviewIdentityCheckbox.checked;

      let username = isIdentified ? prompt('Bitte geben Sie Ihren Benutzernamen ein:') : 'Anonym';
      if (isIdentified && !username) {
        alert('Bitte geben Sie einen Benutzernamen ein.');
        return;
      }

      let reviewMessages = JSON.parse(localStorage.getItem('messages') || '[]');
      reviewMessages.push({ id: Date.now(), type: 'Bewertung', message, username, replies: [] });
      localStorage.setItem('messages', JSON.stringify(reviewMessages));
      reviewMessageInput.value = '';
      alert('Bewertung abgegeben!');
    });

    // Zurück-Button Logik
    const backButton = document.getElementById('back-button');
    backButton.addEventListener('click', () => {
      window.history.back();  // Gehe zur vorherigen Seite
    });
  });
</script>

<style>
  main {
    margin: auto;
    padding: 2rem;
    width: 100%;
    max-width: 600px;
    background: #e0d9d2;
    border-radius: 10px;
    color: #0f0e0e;
    text-align: center;
    position: relative;  /* Wichtig für die Positionierung des "Zurück"-Buttons */
  }

  h1 {
    margin-bottom: 3rem;
    font-size: 28px;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  textarea {
    padding: 0.5rem;
    border-radius: 8px;
    border: 1px solid #0a0202;
    background: #e9e2e2;
    color: #110505;
  }

  button {
    padding: 0.75rem;
    background: linear-gradient(to right, rgb(46 111 24), rgb(168 255 234 / 0%));
    color: white;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.3s ease;
  }

  button:hover {
    background: #c05;
    transform: translateY(-2px);
  }

  /* Stil für den "Zurück" Button mit Pfeil */
  #back-button {
    position: absolute;  /* Positionierung innerhalb von "main" */
    bottom: -0.7rem;        /* Abstand vom unteren Rand */
    right: 0;          /* Abstand vom rechten Rand */
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(to right, rgb(231 238 231), rgb(13 6 6));
    color: hsl(0deg 7% 3%);
    border: none;
    border-radius: 8px;
    box-shadow: 0 2px 4px rgb(0 0 0 / 10%);
    cursor: pointer;
    transition: background 0.3s ease, transform 0.3s ease;
  }

  #back-button:hover {
    background: rgb(145 190 130);
    transform: translateY(-2px);
  }

  /* Stil für das Pfeil-SVG */
  #back-button svg {
    fill: currentcolor;  /* Erbt die Textfarbe des Buttons */
  }
</style>
