---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Problem Melden">
  <main>
    <h1>Problem melden</h1>
    <form id="problem-form">
      <label for="problem-message">Beschreiben Sie das Problem:</label>
      <textarea id="problem-message" rows="5" placeholder="Beschreiben Sie das Problem" required></textarea>
      <label for="problem-identity">
        <input type="checkbox" id="problem-identity" />
        Als Benutzer identifizieren
      </label>
      <button type="submit">Problem melden</button>
    </form>
  </main>
</Layout>

<script type="module">
  document.addEventListener('DOMContentLoaded', () => {
    const problemForm = document.getElementById('problem-form');
    const problemMessageInput = document.getElementById('problem-message');
    const problemIdentityCheckbox = document.getElementById('problem-identity');

    problemForm.addEventListener('submit', (event) => {
      event.preventDefault();
      const message = problemMessageInput.value;
      const isIdentified = problemIdentityCheckbox.checked;

      let username = isIdentified ? prompt('Bitte geben Sie Ihren Benutzernamen ein:') : 'Anonym';
      if (isIdentified && !username) {
        alert('Bitte geben Sie einen Benutzernamen ein.');
        return;
      }

      let problemMessages = JSON.parse(localStorage.getItem('messages') || '[]');
      problemMessages.push({ id: Date.now(), type: 'Problem', message, username, replies: [] });
      localStorage.setItem('messages', JSON.stringify(problemMessages));
      problemMessageInput.value = '';
      alert('Problem gemeldet!');
    });
  });
</script>

<style>
  main {
    margin: auto;
    padding: 2rem;
    width: 100%;
    max-width: 600px;
    background: #e0d9d2;
    border-radius: 10px;
    color: #0f0e0e;
    text-align: center;
  }

  h1 {
    margin-bottom: 3rem;
    font-size: 28px;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  textarea {
    padding: 0.5rem;
    border-radius: 8px;
    border: 1px solid #0a0202;
    background: #e9e2e2;
    color: #110505;
  }

  button {
    padding: 0.75rem;
    background: linear-gradient(to right, rgb(46 111 24), rgb(168 255 234 / 0%));
    color: white;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.3s ease;
  }

  button:hover {
    background: #c05;
    transform: translateY(-2px);
  }
</style>