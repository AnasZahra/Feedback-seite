---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Problem Melden">
  <main>
    <h1>Problem melden</h1>
    <form id="problem-form">
      <label for="problem-message">Beschreiben Sie das Problem:</label>
      <textarea id="problem-message" rows="5" placeholder="Beschreiben Sie das Problem" required></textarea>
      <label for="problem-identity">
        <input type="checkbox" id="problem-identity" />
        Als Benutzer identifizieren
      </label>
      <button type="submit">Problem melden</button>
    </form>
    <!-- Der "Zurück zur Seite" Button als Pfeil -->
    <button id="back-button">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
        <path d="M14 7l-5 5 5 5V7z"/>
      </svg>
      Zurück
    </button>
  </main>
</Layout>

<script type="module">
  document.addEventListener('DOMContentLoaded', () => {
    const problemForm = document.getElementById('problem-form');
    const problemMessageInput = document.getElementById('problem-message');
    const problemIdentityCheckbox = document.getElementById('problem-identity');

    problemForm.addEventListener('submit', (event) => {
      event.preventDefault();
      const message = problemMessageInput.value;
      const isIdentified = problemIdentityCheckbox.checked;

      let username = isIdentified ? prompt('Bitte geben Sie Ihren Benutzernamen ein:') : 'Anonym';
      if (isIdentified && !username) {
        alert('Bitte geben Sie einen Benutzernamen ein.');
        return;
      }

      let problemMessages = JSON.parse(localStorage.getItem('messages') || '[]');
      problemMessages.push({ id: Date.now(), type: 'Problem', message, username, replies: [] });
      localStorage.setItem('messages', JSON.stringify(problemMessages));
      problemMessageInput.value = '';
      alert('Problem gemeldet!');
    });

    // Zurück-Button Logik
    const backButton = document.getElementById('back-button');
    backButton.addEventListener('click', () => {
      window.history.back();  // Gehe zur vorherigen Seite
    });
  });
</script>

<style>
  main {
    margin: auto;
    padding: 2rem;
    width: 100%;
    max-width: 600px;
    background: #e0d9d2;
    border-radius: 10px;
    color: #0f0e0e;
    text-align: center;
    position: relative;  /* Wichtig für die Positionierung des "Zurück"-Buttons */
  }

  h1 {
    margin-bottom: 3rem;
    font-size: 28px;
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  textarea {
    padding: 0.5rem;
    border-radius: 8px;
    border: 1px solid #0a0202;
    background: #e9e2e2;
    color: #110505;
  }

  button {
    padding: 0.75rem;
    background: linear-gradient(to right, rgb(46 111 24), rgb(168 255 234 / 0%));
    color: white;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    transition: background 0.3s ease, transform 0.3s ease;
  }

  button:hover {
    background: #c05;
    transform: translateY(-2px);
  }

  /* Stil für den "Zurück" Button mit Pfeil */
  #back-button {
    position: absolute;  /* Positionierung innerhalb von "main" */
    bottom: -0.7rem;        /* Abstand vom unteren Rand */
    right: 0;         /* Abstand vom rechten Rand */
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(to right, rgb(231 238 231), rgb(13 6 6));
    color: hsl(0deg 7% 3%);
    border: none;
    border-radius: 8px;
    box-shadow: 0 2px 4px rgb(0 0 0 / 10%);
    cursor: pointer;
    transition: background 0.3s ease, transform 0.3s ease;
  }

  #back-button:hover {
    background: rgb(145 190 130);
    transform: translateY(-2px);
  }

  /* Stil für das Pfeil-SVG */
  #back-button svg {
    fill: currentcolor;  /* Erbt die Textfarbe des Buttons */
  }
</style>
