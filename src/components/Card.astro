---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="card">
  <h2>{title}</h2>
  <p>{description}</p>
</div>

<style>
  .card {
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 4px rgb(0 0 0 / 10%);
    padding: 1em;
    margin: 1em 0;
  }

  .card h2 {
    margin: 0 0 0.5em;
  }

  .card p {
    margin: 0;
    color: #333;
  }
</style>
